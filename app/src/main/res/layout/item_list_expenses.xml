<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBF2CF"
        android:id="@+id/dateExpense"
        android:text="1101"
        android:gravity="center"
        android:textSize="16dp"
        android:padding="6dp"
        />
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/typeExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                />
            <TextView
                android:textColor="#FF3A3A"
                android:id="@+id/amountExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/timeExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ids fsdd"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/addressExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ids fsdd"
        />
</LinearLayout>